<DialogManager>
  {({ isShown, show, hide }) => (
    <Box>
      <Dialog
        isShown={isShown}
        title="Dialog without Buttons"
        onExited={hide}
      >
        <Box>
          <Paragraph>Manage your own buttons and interactions.</Paragraph>
        </Box>
      </Dialog>
      <Button onClick={show}>Show Dialog without Buttons</Button>
    </Box>
  )}
</DialogManager>
